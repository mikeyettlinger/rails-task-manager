<h5>Task: <%= @task.title %></h5>

<% if @task.completed %>
  <label class="container"> This Task is Completed
    <input type="checkbox" checked="checked">
    <span class="checkmark"></span>
  </label>
<% else %>
    <label class="container"> This Task is Not Completed
    <input type="checkbox">
    <span class="checkmark"></span>
  </label>
<% end %>


<%= link_to "Back to List", tasks_path %>
<%= link_to "Edit Task", edit_task_path(@task) %>
